@using Microsoft.AspNet.Identity

<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            @Html.ActionLink("Assemblify", "Index", "Home", routeValues: new { area = "" }, htmlAttributes: new { @class = "navbar-brand" })
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li>@Html.ActionLink("Home", "Index", "Home", routeValues: new { area = "" }, htmlAttributes: null)</li>
                <li>@Html.ActionLink("Search", "Index", "Search", routeValues: new { area = "" }, htmlAttributes: null)</li>


                @if (Request.IsAuthenticated)
                {
                    <li>
                        @Html.ActionLink("New Post", "Create", "Post", routeValues: new { area = "" }, htmlAttributes: new { title = "Create New Post", area = "" })
                    </li>
                }

                @if (User.IsInRole(GlobalConstants.AdministratorRoleName))
                {
                    <li>
                        @Html.ActionLink("Admin", "Index", "Manage", routeValues: new { area = "Administration" }, htmlAttributes: new { title = "Administration", area = "" })
                    </li>
                }

            </ul>
            @Html.Partial(PartialViews.LoginPartial)

        </div>
    </div>
</div>